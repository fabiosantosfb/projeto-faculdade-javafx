<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="258.0" prefWidth="592.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Autenticacao.LoginController">
    <padding><Insets bottom="100" left="100" right="100" top="100" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="90" prefWidth="90">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="90" prefWidth="90">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Login GD" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>

    <!-- Add Name Label -->
    <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="email" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Add Password Label -->
    <Label text="Senha : " GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
    <!-- Add Password Field -->
    <PasswordField fx:id="senha" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Add Submit Button -->
    <Button fx:id="buttonLogar" defaultButton="true" onAction="#loginAction" prefHeight="40" prefWidth="100" text="Logar" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="5" left="0" right="0" top="0" />
        </GridPane.margin>
    </Button>
    <!-- Add Submit Button -->
    <Button fx:id="buttonRegistrar" defaultButton="true" onAction="#registrarAction" prefHeight="40" prefWidth="100" text="Registrar" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="90" />
        </GridPane.margin>
    </Button>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
